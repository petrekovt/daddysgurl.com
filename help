    <script>
        function createHeart() {
            const heart = document.createElement("div");
            heart.classList.add("heart");
            document.body.appendChild(heart);
            
            heart.style.left = Math.random() * 100 + "vw";
            heart.style.animationDuration = Math.random() * 3 + 2 + "s";
            
            setTimeout(() => { heart.remove(); }, 5000);
        }

        setInterval(createHeart, 400);

        function createFirework() {
            for (let i = 0; i < 3; i++) {
                const fireworkContainer = document.createElement("div");
                fireworkContainer.style.position = "absolute";
                fireworkContainer.style.left = Math.random() * 100 + "vw";
                fireworkContainer.style.top = Math.random() * 50 + 30 + "vh";

                for (let j = 0; j < 25; j++) {
                    let firework = document.createElement("div");
                    firework.classList.add("firework");
                    firework.style.backgroundColor = ["#ffcc00", "#ff6699", "#66ccff", "#99ff99"][Math.floor(Math.random() * 4)];
                    firework.style.left = `${Math.random() * 50 - 25}px`;
                    firework.style.top = `${Math.random() * 50 - 25}px`;
                    firework.style.animationDuration = "1.5s";

                    fireworkContainer.appendChild(firework);
                }

                document.body.appendChild(fireworkContainer);

                setTimeout(() => { fireworkContainer.remove(); }, 1500);
            }
        }

        setInterval(createFirework, 1000);

        function createBalloon() {
            const balloon = document.createElement("div");
            balloon.classList.add("balloon");

            const colors = ["#FF5F5F", "#FF914D", "#FFD700", "#66CCFF", "#99FF99"];
            balloon.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            balloon.style.left = Math.random() * 90 + "vw";
            balloon.style.animationDuration = Math.random() * 4 + 5 + "s";

            document.body.appendChild(balloon);

            setTimeout(() => { balloon.remove(); }, 8000);
        }

        setInterval(createBalloon, 700);
    </script>
