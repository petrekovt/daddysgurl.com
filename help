        h1 {
            font-size: 60px;
            font-weight: 700;
            color: white;
            text-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
            animation: floatText 4s ease-in-out infinite alternate;
            position: absolute;
            top: 40%;
        }

        @keyframes floatText {
            0% { transform: translateY(0); }
            100% { transform: translateY(-10px); }
        }

        /* Floating hearts */
        .heart {
            position: absolute;
            width: 15px;
            height: 15px;
            background: #ff4d6d;
            transform: rotate(-45deg);
            animation: floatHearts 5s linear infinite;
        }

        .heart::before, .heart::after {
            content: '';
            position: absolute;
            width: 15px;
            height: 15px;
            background: #ff4d6d;
            border-radius: 50%;
        }

        .heart::before { top: -7.5px; left: 0; }
        .heart::after { left: 7.5px; top: 0; }

        @keyframes floatHearts {
            0% { opacity: 1; transform: translateY(0) rotate(-45deg) scale(1); }
            100% { opacity: 0; transform: translateY(-100vh) rotate(-45deg) scale(1.5); }
        }

        /* Fireworks */
        .firework {
            position: absolute;
            width: 6px;
